Inicio JuegoCartas
        
	var cantidadDisponible;
        var cantidadApostar;
		
	 Escribir "----INDICACIONES----"
Escribir  "Este juego consiste en apostar jugando cartas.\n"
                                 
+ "Debes ingresar el dinero total con el que quieres jugar.\n"
                                 
+ "El casino nos muestra dos cartas, luego apuestas.\n"
                                 
+ "Si la siguiente carta que saca el casino se\n"
                                
 + "encuentra dentro del rango de las dos cartas anteriores\n"
                                
 + "ganas el dinero apostado de lo contrario lo pierdes.\n"
                                 
+ "***EL JUEGO TERMINA CUANDO TE QUEDES SIN DINERO***");
        
        Escribir "Dinero disponible :"
        leer (cantidadDisponible)
        
        mientras(cantidadDisponible > 0 )    
        
        var carta1 = math random
        var carta2 = math random
        var carta3 = math random
        Escribir "RANGO DE CARTAS"
        
        Escribir "Número de Carta:" + carta1
        Escribir "Número de Carta:" + carta2
        
         Escribir "Cuanto dinero apostaras:"
         leer (cantidadApostar)
         Escribir "Número de Carta: " + carta3
         
          si (carta3 >= carta2 y carta3<=carta1 )
            Escribir "Dinero disponible: " + (cantidadDisponible + cantidadApostar)
           cantidadDisponible = cantidadDisponible + cantidadApostar;
        sino
            Escribir "Dinero disponible: " + (cantidadDisponible - cantidadApostar)
           cantidadDisponible = cantidadDisponible - cantidadApostar;
         
          Escribir "TE HAS QUEDADO SIN DINERO ****¡EL JUEGO AH TERMINADO!****"
	  finmientras
	 finsi
Fin
  
